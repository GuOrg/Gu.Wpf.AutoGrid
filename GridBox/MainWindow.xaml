<Window x:Class="GridBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GridBox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="6,0"></Setter>
        </Style>
    </Window.Resources>
     <local:AutoGrid ColumnDefinitions="Auto *">
        <TextBlock Text="foo1" Grid.Row="0" Grid.Column="0" />
        <TextBox Text="bar1" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Text="foo2" Grid.Row="1" Grid.Column="0" />
        <TextBox Text="bar2" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="foo3" Grid.Row="2" Grid.Column="0" />
        <TextBox Text="bar3" Grid.Row="2" Grid.Column="1"/>
    </local:AutoGrid>
</Window>
