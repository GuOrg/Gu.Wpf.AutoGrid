<Window x:Class="Gu.Wpf.AutoRowGrid.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:demo="clr-namespace:Gu.Wpf.AutoRowGrid.Demo"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <TabControl>
        <TabItem Header="column span">
            <demo:ColumnSpanView />
        </TabItem>

        <TabItem Header="nested">
            <demo:NestedRowsView />
        </TabItem>

        <TabItem Header="explicit">
            <demo:ExplicitColumnsView />
        </TabItem>

        <TabItem Header="verbose columndefinitions">
            <demo:ColumnDefinitionsView />
        </TabItem>

        <TabItem Header="auto increment">
            <demo:AutoIncrementColumnsView />
        </TabItem>
    </TabControl>
</Window>







