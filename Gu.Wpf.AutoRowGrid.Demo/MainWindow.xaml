<Window x:Class="GridBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gridBox="clr-namespace:GridBox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <TabControl>
        <TabItem Header="column span">
            <gridBox:ColumnSpanView />
        </TabItem>

        <TabItem Header="nested">
            <gridBox:NestedRowsView />
        </TabItem>

        <TabItem Header="explicit">
            <gridBox:ExplicitColumnsView />
        </TabItem>

        <TabItem Header="verbose columndefinitions">
            <gridBox:ColumnDefinitionsView />
        </TabItem>
    </TabControl>
</Window>







