<Window x:Class="Gu.Wpf.AutoRowGrid.Demo.UiTestWindows.ExplicitRowsAndColumnsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:autoRowGrid="http://gu.se/AutoRowGrid"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Wpf.AutoRowGrid.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="ExplicitRowsAndColumnsWindow"
        Width="200"
        Height="100"
        mc:Ignorable="d">
    <Window.DataContext>
        <demo:ViewModel />
    </Window.DataContext>
    <GroupBox>
        <autoRowGrid:Grid ColumnDefinitions="Auto *">
            <TextBox x:Name="R0C0"
                     Grid.Row="0"
                     Grid.Column="0"
                     Text="foo1" />
            <TextBox x:Name="R0C1"
                     Grid.Row="0"
                     Grid.Column="1"
                     Text="{Binding Value1}" />

            <TextBox x:Name="R1C0"
                     Grid.Row="1"
                     Grid.Column="0"
                     Text="foo2" />
            <TextBox x:Name="R1C1"
                     Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding Value2}" />
        </autoRowGrid:Grid>
    </GroupBox>
</Window>
